<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="로딩중"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/tvAreaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="..."
                android:textSize="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">
            <ImageView
                android:id="@+id/imgRefresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/refresh_image_click"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시 날씨"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_round"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="5">
                <LinearLayout
                    android:layout_column="0"
                    android:layout_row="0"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     "
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:padding="5dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/imgWeather"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:layout_gravity="fill_vertical"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_weather_sunny"/>

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_humidity"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="습도"
                    android:textSize="14dp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_sky"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="하늘 상태"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>
                <TextView
                    android:id="@+id/tvSky"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_rain_ratio"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="강수확률"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>
                <TextView
                    android:id="@+id/tvRainRatio"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#000000"/>

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_rain_type"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="4"
                    android:text="강수형태"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>
                <TextView
                    android:id="@+id/tvRainType"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#000000" />
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_cloth"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="옷 추천"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvRecommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingRight="40dp"
                    android:textSize="14dp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시 날씨"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_round"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="5">
                <LinearLayout
                    android:layout_column="0"
                    android:layout_row="0"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvTemp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     "
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="°"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:padding="5dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/imgWeather2"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:layout_gravity="fill_vertical"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_weather_sunny"/>

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_humidity"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="습도"
                    android:textSize="14dp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tvHumidity2"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_sky"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="하늘 상태"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>
                <TextView
                    android:id="@+id/tvSky2"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_rain_ratio"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="강수확률"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>
                <TextView
                    android:id="@+id/tvRainRatio2"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#000000"/>

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_rain_type"/>
                <TextView
                    android:layout_column="1"
                    android:layout_row="4"
                    android:text="강수형태"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>
                <TextView
                    android:id="@+id/tvRainType2"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#000000" />
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_tv_cloth"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="옷 추천"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingRight="20dp"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvRecommend2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingRight="40dp"
                    android:textSize="14dp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미세먼지"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tvAirPollution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="5시 이후에 업데이트됩니다."
                android:textSize="14dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgAir"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSettingArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_enable"
        android:textColor="#000000"
        android:text="관심 지역 추가"/>

</LinearLayout>